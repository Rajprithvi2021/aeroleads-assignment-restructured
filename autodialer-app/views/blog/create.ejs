<!DOCTYPE html>
<html>
<head>
  <title>Create Blog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body>
  <div class="container my-5">
    <h1 class="mb-4">Generate with AI</h1>
    <div class="card">
      <div class="card-body">
        <h5>Single Article</h5>
        <div class="mb-3">
          <label>Title</label>
          <input type="text" id="title" class="form-control" placeholder="Node.js Guide">
        </div>
        <div class="mb-3">
          <label>Details</label>
          <textarea id="details" class="form-control" rows="3"></textarea>
        </div>
        <button class="btn btn-primary" onclick="generateSingle()">Generate</button>
      </div>
    </div>
    <div class="card mt-4">
      <div class="card-body">
        <h5>Bulk</h5>
        <textarea id="bulkTitles" class="form-control" rows="10" placeholder="Node.js Basics&#10;JavaScript Closures"></textarea>
        <button class="btn btn-success mt-3" onclick="generateBulk()">Generate All</button>
      </div>
    </div>
    <div id="result" class="mt-4"></div>
  </div>
  <script src="/js/ai-prompt.js"></script>
</body>
</html>
